pipeline {
    agent any
    tools {
        maven 'maven-3.9.2'
    }
    stages {
        stage ('Build-maven') {
            steps {
                sh ''' cd /maven/simple-war
                      mvn clean package
                      cd ./target/
                      ls
                      '''

            }
        }

        stage ('deploy-tomcat') {
            steps {
                script {
                    deploy adapters: [tomcat9(path: '', url: 'http://3.111.187.20:8080/')],
                     contextPath: 'itdefined-war-1.0.0', war: '/maven/simple-war/target/itdefined-war-1.0.0.war'
                }

            }

        }
    }
}
