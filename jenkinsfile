pipeline {
    agent any
    triggers {
        pollSCM('H * * * *')
    }

         stages {
                  stage ('Build') {
                steps {
                         catchError(buildResult: 'success', stageResult: 'failure')
                       sh 'pwd'
                       sh 'exit 1'
                   }
        }

          stage ('Test') {
                 steps {
                          sh 'pwd'
                          echo "this is test"
                     }
        }
             stage ('Deploy') {
                steps {
                        sh 'pwd'
                         echo "this is Deploy"
                    }
        }
    }



























}