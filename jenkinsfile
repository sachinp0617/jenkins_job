pipeline {
    agent any

    tools {
        maven 'maven-3.9.2'
    }

    stages {
        stage ('Build-maven') {
            steps {
                sh '''
                    cd ~/Devops-ITD-May-2023/maven/simple-war
                    mvn clean package
                    cd ./target/
                    ls

                '''

            }
 
        }
        stage ('Deploy-Tomcat') {
            steps {
                script {
                    deploy adapters: [tomcat9(credentialsId: 'tom', path: '', url: 'http://3.7.68.88:8080/')], 
                    contextPath: '/itdefined-war-1.0.0', war: 'maven/simple-war/target/itdefined-war-1.0.0.war '
                }

 
            }

        }
    }
}
