pipeline {
    agent any
    parameters {
               choice choices: ['Test', 'Qa', 'Proudction'], description: 'select one of the choices to deploy', name: 'Deploy'
               }


    stages {
        stage ('Buid') {
            steps {
                scirpt{
                     def Environment = "${params.Deploy}"
                     if(Environment == 'Test') {
                         echo "deploy to test"
                     }
                    
                     else if(Environment == 'Qa') {
                        echo "deploy to Qa"
                     }

                     else 
                     echo "deploy to production" 

                }
               
            }
        }



    }

}

